{
  "extends": "@cyansalt/tsconfig/tsconfig.base",
  "compilerOptions": {
    "noEmit": false,
    "declaration": true,
    "module": "CommonJS",
    "rootDir": "src",
    "outDir": "dist",
    "skipLibCheck": true,
    "plugins": [
      {
        "transform": "typescript-transform-aliases",
        "aliases": {
          "^vue-v2(?=$|/)": "vue"
        },
        "after": true,
        "afterDeclarations": true
      }
    ]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "**/dist",
    "**/node_modules",
    "**/tests"
  ]
}
